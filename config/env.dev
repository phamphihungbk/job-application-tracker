## APP INFO
APP_ENV=development
APP_ROUTE_PREFIX=/api/v1
APP_PORT=3000
RATE_LIMIT_REQUEST: 10
APP_BASE_API=localhost:3000

## DATABASE_INFO
TYPEORM_CONNECTION=postgres
TYPEORM_HOST=postgres-app-tracker
TYPEORM_PORT=5432
TYPEORM_USERNAME=tracker_user
TYPEORM_PASSWORD=tracker_password
TYPEORM_DATABASE=tracker_db
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=TRUE
TYPEORM_LOGGER=file
TYPEORM_ENTITIES=src/models/*.js,src/models/*.ts
TYPEORM_MIGRATIONS=database/migrations/*.js,database/migrations/*.ts
TYPEORM_DRIVER_EXTRA='{"bigNumberStrings": false}'
TYPEORM_SEEDING_FACTORIES=database/factories/**/*.js,database/factories/**/*.ts
TYPEORM_SEEDING_SEEDS=database/seeds/*.js,database/seeds/*.ts

## DOCKER ENV
POSTGRES_USER=root
POSTGRES_DB=tracker_db
POSTGRES_PASSWORD=secret

## DIR INFO
TYPEORM_ENTITIES_DIR=src/models
CONTROLLERS_DIR=/app/controllers/**/*Controller{.ts,.js}
MIDDLEWARES_DIR=/app/middlewares/**/*{.ts,.js}
RESOLVERS_DIR=/src/resolvers/**/*Resolver{.ts,.js}
